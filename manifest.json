{
    "manifest_version": 2,
    "name": "Input Hopper",
    "version": "1.0",
    "description": "Adds red border to all webpages matching mozilla.org",
    "icons": {
        "48": "icons/border-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "hopper.js"
            ]
        }
    ]
}