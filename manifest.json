{
    "manifest_version": 2,
    "name": "Hopper",
    "version": "0.1.3",
    "description": "Manage tabndex order of input fields",
    "icons": {
        "48": "icons/hopper-icon.svg",
        "96": "icons/hopper-icon.svg"
    },
    
    "sidebar_action": {
        "default_title": "Hopper",
        "default_panel": "sidebar.html",
        "default_icon": "icons/hopper-icon.svg"
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "hopper.js"
            ]
        }
    ]
}